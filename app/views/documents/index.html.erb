<p id="notice"><%= notice %></p>

<%= simple_form_for :query, url: documents_path, method: :get do |f| %>
  <div class="form-group">
    <%= f.input :query, placeholder: 'What are you looking for?', label: false, input_html: { name: :query, value: params['query'] }, class: 'form-control'  %>
    <%= f.submit 'Search', class: 'btn btn-primary' %>
  </div>
<% end %>

<h1>Documents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.sender&.name %></td>
        <td><%= document.recipient&.name %></td>
        <td><%= document.acted_at %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

