<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Sent at</th>
      <th>Received at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.sender %></td>
        <td><%= document.recipient %></td>
        <td><%= document.sent_at %></td>
        <td><%= document.received_at %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

